<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:zcml="http://namespaces.zope.org/zcml"
           xmlns:meta="http://namespaces.zope.org/meta">

  <meta:directives namespace="http://namespaces.gocept.com/amqp">

    <meta:directive
      zcml:condition="installed zope.xmlpickle"
      name="writefiles"
      schema=".writefiles.IWriteFilesDirective"
      handler=".writefiles.writefiles_directive"
      />

    <meta:directive
      zcml:condition="installed gocept.filestore"
      name="readfiles"
      schema=".readfiles.IReadFilesDirective"
      handler=".readfiles.readfiles_directive"
      />

  </meta:directives>
</configure>
